@page
@model PassionCentre.Pages.Roles.IndexModel

@{
    ViewData["Title"] = "Roles";
}
<h2>Role Listing</h2>

<div class="row">
    <div class="col-md-4">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" asp-page="Create">Create new Role</a>
        }
        <a class="btn btn-primary" asp-page="Manage">Manage User Roles</a>
    </div>
</div>
<br />
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApplicationRole)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-warning" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }

                    <a class="btn btn-warning" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
