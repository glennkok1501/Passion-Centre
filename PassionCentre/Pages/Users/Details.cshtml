@model PassionCentre.Pages.Users.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<style type="text/css">

    dl {
        display: flex;
        flex-flow: row wrap;
        border-width: 1px 1px 0 0;
        box-shadow: 0 0 15px 4px rgba(0,0,0,0.06);
    }

    dt {
        flex-basis: 20%;
        padding: 2px 4px;
        background: #333;
        text-align: center;
        color: #fff;
        border: 1px solid #fff;
        margin-bottom: 10px;
    }

    dd {
        flex-basis: 70%;
        flex-grow: 1;
        margin: 0;
        padding: 2px 4px;
        border: 1px solid #333;
        margin-bottom: 10px;
    }
</style>

