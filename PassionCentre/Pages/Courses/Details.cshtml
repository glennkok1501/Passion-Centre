@page "{id:int?}"
@model PassionCentre.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.MeetingDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.MeetingDetails)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.Identity.Name.ToString() == Model.Course.Username)
    {
        <td>
            <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@Model.Course.ID">Edit</a> |
        </td>
    }
    <td>
        <a class="btn btn-dark" asp-page="./Index">Back to List</a>
    </td>
</div>
