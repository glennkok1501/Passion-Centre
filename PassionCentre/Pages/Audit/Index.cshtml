@page
@model PassionCentre.Pages.Audit.IndexModel

@{
    ViewData["Title"] = "Audit";
}

<h1>Audit</h1>
@if (User.IsInRole("Admin")) 
{
    <p>
        <a class="btn btn-primary" asp-page="Create">Create New</a>
    </p>
    <br />
}
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].AuditActionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].DateStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].KeyCourseFieldID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AuditRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuditActionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeyCourseFieldID)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Audit_ID">Edit</a>
                    <a class="btn btn-warning" asp-page="./Delete" asp-route-id="@item.Audit_ID">Delete</a>
                }
                <a class="btn btn-warning" asp-page="./Details" asp-route-id="@item.Audit_ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
