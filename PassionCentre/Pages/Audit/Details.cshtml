@page
@model PassionCentre.Pages.Audit.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style type="text/css">

    dl {
        display: flex;
        flex-flow: row wrap;
        border-width: 1px 1px 0 0;
        box-shadow: 0 0 15px 4px rgba(0,0,0,0.06);
    }

    dt {
        flex-basis: 20%;
        padding: 2px 4px;
        background: #333;
        text-align: center;
        color: #fff;
        border: 1px solid #fff;
        margin-bottom: 10px;
    }

    dd {
        flex-basis: 70%;
        flex-grow: 1;
        margin: 0;
        padding: 2px 4px;
        border: 1px solid #333;
        margin-bottom: 10px;
    }
</style>

<h1>Audit Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuditRecord.AuditActionType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuditRecord.AuditActionType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuditRecord.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuditRecord.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuditRecord.DateStamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuditRecord.DateStamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuditRecord.TimeStamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuditRecord.TimeStamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuditRecord.KeyCourseFieldID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuditRecord.KeyCourseFieldID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuditRecord.IPAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuditRecord.IPAddress)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.AuditRecord.Audit_ID">Edit</a>
    }
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>
